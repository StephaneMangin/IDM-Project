package org.irisa.diverse.videogen.videogenl.transformations.strategies;

import java.nio.file.Path;
import org.irisa.diverse.videogen.transformations.VideoCodec;

@SuppressWarnings("all")
public interface VideosStrategy {
  /**
   * Create a thumbnail from the given video to the given path
   * 
   * TODO: should return a file object to be processed by the caller
   * @author Stéphane Mangin <stephane.mangin@freesbee.fr>
   */
  public abstract void createThumbnails(final Path fullPath, final Path thumbFileName);
  
  /**
   * Convert this video conform to the given mimeType
   * 
   * TODO: add a mimeType instead of a string format parameter
   * @author Stéphane Mangin <stephane.mangin@freesbee.fr>
   */
  public abstract void convert(final Path fullPath, final Path newFullPathName, final VideoCodec codec);
  
  /**
   * Return the mimeType object for the given video
   * 
   * @author Stéphane Mangin <stephane.mangin@freesbee.fr>
   */
  public abstract VideoCodec getMimeType(final Path fullPath);
  
  /**
   * Return the duration (in seconds) for the given video
   * 
   * @author Stéphane Mangin <stephane.mangin@freesbee.fr>
   */
  public abstract int getDuration(final Path fullPath);
}
